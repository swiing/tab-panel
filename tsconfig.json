{
  "compilerOptions": {
    "outDir": "out",
    "target": "es2021",
    "lib": [
      "es2021", "DOM"
    ],
    "module": "ES2020",
    "strict": true,
    "noImplicitOverride": true,
    // Needed for CommonJS modules: markdown-it, fs-extra
    // "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true // enables importers to jump to source
  }
}
